<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".SettingsActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/r1"
        android:background="?attr/card_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:text="@string/settings"
            android:textColor="?attr/Text_Color"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_below="@+id/r1"
        android:text="Dark Mode"
        android:layout_marginTop="15dp"
        android:textColor="?attr/text_tint"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_below="@+id/t1"
        android:layout_marginTop="2dp"
        android:backgroundTint="?attr/card_background"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/on_off"
                android:text="Off / On"
                android:textColor="?attr/Text_Color"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t2"
        android:layout_below="@+id/c1"
        android:text="Privacy Policy"
        android:layout_marginTop="15dp"
        android:textColor="?attr/text_tint"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrivacy"
        android:layout_below="@+id/t2"
        android:layout_marginTop="2dp"
        android:backgroundTint="?attr/card_background"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="?attr/Text_Color"
            android:text="T n C and Privacy Policy"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t3"
        android:layout_below="@+id/cardPrivacy"
        android:text="About Us"
        android:layout_marginTop="15dp"
        android:textColor="?attr/text_tint"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/quiqle"
        android:layout_below="@+id/t3"
        android:layout_marginTop="2dp"
        android:backgroundTint="?attr/card_background"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="?attr/Text_Color"
            android:text="know more about QuiQLe Corp."
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/quiqle"
    android:layout_above="@+id/l1"
    android:layout_height="wrap_content">
    <com.facebook.ads.NativeAdLayout
        android:id="@+id/nativeAdLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
</ScrollView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:layout_height="wrap_content">

        <View
            android:background="?attr/Text_Color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textColor="?attr/Text_Color"
            android:text="A QuiQle Corp. Product"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</RelativeLayout>



</LinearLayout>